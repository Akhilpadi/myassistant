import pyttsx3
import os

	#pyttsx3.speak("Welcome its ur personal assistant kate ")
print("\n")
print("Welcome its your personal assistant kate how can i help you today!!")
print("\n")
print("i can help you with openning certain software application like : *for example, you can ask me to start chrome\n \n \n")        
                                                 
while True:
	print("\nask me anything : "  , end='')
	p = input()

	# print(p)
	# os.system(p)

	if ("run" in p)  and ("chrome" in p) or("start" in p):
	  os.system("start chrome")

	elif ("run" in p) or  ("execute" in p) or ("start" in p) and  ("notepad" in p) or ("editor" in p):
	  os.system("notepad")

	elif ("run" in p) or ("start" in p) and ("player" in p) and ("media" in p) or ("windows" in p):
	  os.system("start wmplayer")

	elif ("calculator" in p) and ("open" in p):
	 os.system("start calc")  

	elif ("date" in p):
	 os.system("date")

	elif ("time" in p):
	 os.system("time")

	elif ("spotify" in p):
	 os.system("start chrome www.spotify.com")

	elif ("hi" in p) or ("hello" in p):
	 print("hello there, what can i do for you today\n")

	elif ("tell" in p ) or ("about" in p) or ("yourself" in p):
	 print("\nhii,am your personal assistant kate at your service. order me commander!!!\n")

	elif ("task" in p) or ("manager" in p):
	 os.system("taskmgr")

	elif ("paint" in p) or ("ms paint" in p):
	 os.system("mspaint")	 	 	  	

                                 
	elif ("exit" in p)  or ("quit" in p):
	  break

	else :
		#print("\n")
		print("\n*sorry am beginner, you should always use specific words like run or start or open etc for any program to execute\n")
